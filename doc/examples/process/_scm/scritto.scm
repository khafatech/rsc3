(define vFilter
  (lambda (in freq ampl bw)
    (Mul
     (Resonz in freq (Fdiv bw freq))
     (DbAmp ampl))))

(define voiceTr
  (lambda (i t fr amr bwr)
    (Mix
     (vFilter
      i
      (Mul (CtlIn 5 0)  (TRand (Sub 1 fr) (Add 1 fr) t))
      (Mul (CtlIn 5 5)  (TRand (Sub 1 amr) (Add 1 amr) t))
      (Mul (CtlIn 5 10) (TRand (Sub 1 bwr) (Add 1 bwr) t))))))

